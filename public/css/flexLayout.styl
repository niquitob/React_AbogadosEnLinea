@import 'nib'
html
   min-height           100%
   min-width            100%
   max-width            100%
   display              flex
body
   display              flex
   flex                 1
   flex-direction       column
   margin               0
   min-height           100%
   background-color     #fafafa
   .hidden
      display              none !important
   .disabled
      display              none !important
   header
      display              flex
      flex                 0
      flex-direction       column
      max-height           5em
      justify-content      center
      align-items          center
      color                #eee
      font-size            1em
      background-color     darkGrey  
      background-image     url("https://static.platzi.com/static/images/logos/platzi.3cae3cffd5ef.png");
      background-repeat    no-repeat
      background-position  1% 50%
      nav
         display              flex
         height               2em
         flex-direction       row
         justify-content      space-around
         align-items          center
         width                100%
         margin               0
         transition           all 0.3s cubic-bezier(.25,.8,.25,1);
         div
            display              flex
            flex                 1
            height               100%
            justify-content      center
            align-items          center
            transition           all 0.3s cubic-bezier(.25,.8,.25,1);
            background-color     lightGrey  
            cursor               pointer
            &:hover
               background-color     green
   footer
      display           flex
      flex              1
      justify-content   flex-end
      align-items       center
      background-color  darkGrey
      color             #eee
      padding-right     1em
   section
      display           flex
      flex              10
      flex-direction    row
      flex-wrap         wrap
      justify-content   center
      align-items       center
      zoom              0.7
      article
         display           flex
         flex-direction    column
         justify-content   center
         align-items       center
         background-color  #fff
         padding           1.5em
         margin            1em
         box-shadow        0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)
         border-radius     0.5em
         min-height        5em
         transition        all 0.3s cubic-bezier(.25,.8,.25,1)
         &:hover
            box-shadow     0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)
         &:focus
            box-shadow     0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)
         & div
            display           flex
            flex-direction    column
            justify-content   center
            background-color  transparent
